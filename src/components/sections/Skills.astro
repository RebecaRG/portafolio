---
import Section from "../Section.astro"

import { techskills, softskills } from "@cv"
---
<Section title="Habilidades">
    <h3>Techskills:</h3>
    <ul>
        {techskills.map(({ name }) => (
        <li>
            <span>{name}</span>
        </li>
        ))}
    </ul>

    <h3>Softskills:</h3>
        <div class="softskills">
        {softskills.map(({ name }) => (
        <p> <span>+ {name}</span></br></p>
        ))}
        </div>

</Section>

<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-top: 15px;
        margin-bottom: 20px;
    }

    li {
        border-radius: 6px;
        background: #eee;
        color: black;
        font-size: .8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
    
    .softskills {
        margin-top: 15px;
    }
</style>