---
import Section from "../Section.astro"

import { certificates } from "@cv"
---
<Section title="Cursos">

        <ul>
            {
            certificates.map(
                ({name, date, issuer}) => {
            // const startYear = new Date(startDate).getFullYear()
            // const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actual"
            // const years = `${startYear} - ${endYear}`
            const datePrint = new Date(date).toLocaleDateString('es-ES', { year: 'numeric', month: 'long' })
            return(
                <li>
                    <article>
                        
                            <div>
                                <h3>{name}</h3>
                                <h4>{issuer}</h4>
                            </div>
                            <time>{datePrint}</time>
                            
                    </article>
                </li>
            )
            }
            )
            }
        </ul>
    </Section>
    
    <style>
        ul {
            display: flex;
            flex-direction: column;
            gap: 32px;
        }
    
        article h3 {
            font-weight: 400;
            color: #111;
        }
    
        article h4 {
            font-weight: 400;
            color: #777;
        }

        article {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 4px;
        }
    
        time {
            font-size: 0.85em;
            color: #555;
        }
    
    </style>

